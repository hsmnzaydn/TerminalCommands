<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/row_category_card_view"
        style="@style/RowCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            style="@style/RowLinearLayoutStyle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/row_category_thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                style="@style/CategoryTitleStyle"
                android:id="@+id/row_category_name_textview"
                android:text="asdsadasdsasadsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>